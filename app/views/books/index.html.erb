<h1>Books</h1>
    
<table>
    
    <tr>
    <th>Title</th><th>Body</th>
    </tr>
    <% @lists.each do |list| %>
    <tr>
        <td><%= list.title %></td>
        <td><%= list.body %></td>
        <td><%= link_to "show",book_path(list.id) %></td>
        <td><%= link_to "edit",edit_book_path(list.id) %></td>
        <td><%= link_to "destroy",destroy_book_path(list.id), method: :DELETE ,"data-confirm" => "本当に削除しますか？" %></td>
    <% end %>
</table>

<h2>New book</h2>
<%= form_with model: @book, url: '/books',　method: :post do |f| %>

<p>Title</p>
<%= f.text_field :title %>

<p>Body</p>
<%= f.text_area :body %>

<p><%= f.submit 'Create Book' %></p>

<% end %>
